# ==========================================
# RECRUITER COPILOT - ENVIRONMENT VARIABLES
# ==========================================

# API Configuration
# -----------------
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# Default User Configuration
# ---------------------------
VITE_DEFAULT_USER_ID=dev-user-id

# Security Configuration
# -----------------------
# ⚠️  DEMO_MODE should be FALSE in production!
VITE_DEMO_MODE=false

# Demo Mode Recruiters (Development Only)
# ----------------------------------------
# Only used when VITE_DEMO_MODE=true
# Format: JSON array of recruiter objects
VITE_DEMO_RECRUITERS='[
  {
    "id": "demo-1",
    "email": "demo@example.com",
    "name": "Demo User",
    "contact_no": "+1 555-0100",
    "recruiter_id": "demo-user-id",
    "created_at": "2024-01-01T00:00:00Z"
  }
]'

# Feature Flags
# -------------
VITE_ENABLE_CSV_EXPORT=true
VITE_ENABLE_BULK_ACTIONS=true

# Production Security Variables
# -----------------------------
# Uncomment and set these for production:
# VITE_API_KEY=your-production-api-key
# VITE_AUTH_SECRET=your-auth-secret
# VITE_ENCRYPTION_KEY=your-encryption-key

# ==========================================
# PRODUCTION DEPLOYMENT NOTES:
# ==========================================
# 1. Set VITE_DEMO_MODE=false
# 2. Configure proper VITE_API_BASE_URL
# 3. Remove or secure demo recruiter data
# 4. Set up proper authentication system
# 5. Configure API keys and secrets
# ==========================================